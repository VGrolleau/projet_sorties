                {{ form_errors(eventForm.location) }}
            </div>
{#            <div>Rue : {{ ci }}</div>#}

            {{form_row(locationForm.street)}}
            {{form_row(cityForm.zip)}}
            {{form_row(locationForm.latitude)}}
