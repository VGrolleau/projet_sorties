{% extends 'base.html.twig' %}

{% block title %}Hello SortiesController!{% endblock %}

{% block body %}
       <div class="form">
            {% include 'sorties/filter.html.twig' with {form: form} only %}
        </div>
    <div class="nom_et_date">
        <h1> Date du jour : {{ "now" |date('d/m/Y') }}</h1>
        <h1> Participant: {{ app.user.username }}</h1>
    </div>


                <table class="table_list">
                    <tr>
                        <td>
                            <table class="list_entete" >
                                <tr>
                                    <td> event name</td>
                                    <td> duration</td>
                                    <td> Limite date</td>
                                    <td> max registre</td>
                                    <td> State</td>
                                    <td> organizere</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="list" >
                                <table>
                                    {% for event in events %}
                                            <tr>
                                                <td> {{ event.name | upper }}</td>
                                                <td>{{ event.duration }}</td>
                                                <td> {{ event.registrationLimitDate |date('d-m-Y')}}</td>
                                                <td>{{ event.maxRegistrations }}</td>
                                                <td>{{ event.eventState.name }}</td>
                                                <td>{{ event.organizer.username }}</td>
                                            </tr>
                                    {% endfor %}
                                </table>
                            </div>
                        </td>
                   </tr>
                </table>
    <a href="{{ path('sorties_create') }}" title="Create event">Create event</a>
{% endblock %}
