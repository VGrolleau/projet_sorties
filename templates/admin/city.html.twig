{% extends 'base.html.twig' %}

{% block title %}
    City
{% endblock %}

{% block body %}
    <div class="gestionVilles">
        <h2>GÃ©rer les villes</h2>
        <h4>Filtrer les villes</h4>

        {{ form_start(searchCityForm) }}
        {{ form_widget(searchCityForm) }}
        <button type="submit">Rechercher</button>
        {{form_end(searchCityForm)}}


        <table cellspacing="0" cellpadding="0" border="0" width="50%" height="200">
            <tr>
                <td>
                    <table cellspacing="0" cellpadding="1" border="1" width="100%" >
