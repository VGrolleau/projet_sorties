<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# jquery  #}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Krona+One&family=Staatliches&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">

{#        <link rel="icon" href="{{ asset('img/icon.png') }}">#}

        {% block extrastyles %}{% endblock %}
    </head>

    <body>
        <div class="container">
            <header>
                <h1>
                    <a href="{# todo : lier le lien de la page d'accueil  #}{{ path('sorties_home') }}" title="Home">
                        <img src="{{ asset('img/sortiesLogoWhite.png') }}" alt="Logo licorne blanc">
                    </a>
                </h1>
                {% include 'inc/nav.html.twig' %}
            </header>

            <main>
                {% block body %}{% endblock %}
            </main>

            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <footer>
                <div>&copy; {{ "now"|date("Y") }} Sorties</div>
            </footer>

            {% block js %}{% endblock %}
        </div>
    </body>
</html>
